{% extends 'base.html.twig' %}

{% block body %}

    {% if post %}
    <div class="card">
        <div class="card-header">
            {{ post.author }} ({{ post.createdAt|date("Y-m-d H:i") }})
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            <p class="card-text">{{ post.content }}</p>

        </div>
    </div>
    <br>
    {% endif %}

{% endblock %}